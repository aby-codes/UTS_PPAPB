<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".RegistrationActivity">

    <LinearLayout
        android:layout_centerVertical="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="32dp"
        android:layout_marginVertical="32dp"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:textSize="24sp"
            android:fontFamily="@font/poppins_bold"
            android:textStyle="bold"
            android:text="Isi Data Diri"/>

        <EditText
            android:id="@+id/nama"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:layout_marginBottom="24dp"
            android:background="@drawable/bg_editext"
            android:fontFamily="@font/poppins_regular"
            android:hint="Nama Lengkap"
            android:paddingHorizontal="32dp"
            android:paddingVertical="12dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp">
            <EditText
                android:id="@+id/berat_now"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingVertical="12dp"
                android:paddingHorizontal="28dp"
                android:background="@drawable/bg_editext"
                android:fontFamily="@font/poppins_regular"
                android:hint="Berat Badan Saat Ini"
                android:inputType="number"
                />
            <Spinner
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/satuan_berat_now" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp">
            <EditText
                android:id="@+id/berat_future"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingVertical="12dp"
                android:paddingHorizontal="28dp"
                android:background="@drawable/bg_editext"
                android:fontFamily="@font/poppins_regular"
                android:hint="Berat Badan Impian"
                android:inputType="number"
                />
            <Spinner
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/satuan_berat_future"/>
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center_horizontal"
            android:textSize="24sp"
            android:fontFamily="@font/poppins_bold"
            android:textStyle="bold"
            android:text="Tujuan Diet"/>

        <LinearLayout
            android:paddingHorizontal="32dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_editext">
            <Spinner
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="50dp"
                android:id="@+id/tujuan"/>
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:gravity="center_horizontal"
            android:textSize="24sp"
            android:fontFamily="@font/poppins_bold"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"
            android:text="Target Capaian"/>
        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="16dp"
            app:cardElevation="8dp"
            android:layout_gravity="center">
            <CalendarView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/date"/>
        </androidx.cardview.widget.CardView>

        <EditText
            android:id="@+id/calories"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:layout_marginBottom="24dp"
            android:background="@drawable/bg_editext"
            android:fontFamily="@font/poppins_regular"
            android:hint="Jumlah Target Kalori Harian"
            android:paddingHorizontal="32dp"
            android:inputType="phone"
            android:paddingVertical="12dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="32dp"
            android:paddingBottom="64dp">
            <androidx.appcompat.widget.AppCompatButton
                android:background="@drawable/bg_button"
                android:text="Submit"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="24sp"
                android:fontFamily="@font/poppins_bold"
                android:id="@+id/submitButton"/>
        </LinearLayout>

    </LinearLayout>
</ScrollView>